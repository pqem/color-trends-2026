{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Read",
      "Edit",
      "Write",
      "Grep",
      "Glob"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Edit(./.env)",
      "Write(./.env)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ]
  },
  "model": "claude-opus-4-5-20251101",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$FILE\" 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "env": {
    "NODE_ENV": "development"
  }
}
